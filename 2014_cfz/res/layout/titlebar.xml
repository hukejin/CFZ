<?xml version="1.0" encoding="UTF-8"?>
<!-- style="@style/TitleBarbgStyle" -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_titlebar"
    android:background="@drawable/title_bg"
    android:layout_width="fill_parent"
    android:layout_height="48dp" >

    <LinearLayout
        android:id="@+id/lefttitlebar"
        style="@style/TitleBarBackButtonStyle"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:src="@drawable/about" />
    </LinearLayout>

    <TextView
        android:id="@+id/set_titleTextView"
        style="@style/TitleBarTextStyle"
        android:layout_centerInParent="true" />

    <ProgressBar
        android:id="@+id/refresh_title_progressbar"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/set_title_saveButton"
        style="@style/TitleBarRightButtonStyle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:visibility="gone"
       />

</RelativeLayout>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<!-- 无标题的窗体 -->
    <style name="MyTheme.NoTitleBar.CustomBackground" parent="@android:Theme.Black">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 标题栏 -标题-->
    <style name="TitleBarTextStyle">
        <item name="android:text">标题栏</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 标题栏  返回 -->
    <style name="TitleBarBackButtonStyle">
        <item name="android:background">@drawable/title_backbtn_style</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!--标题  右侧的功能键  -->
    <style name="TitleBarRightButtonStyle">
        <item name="android:background">@drawable/title_menubtn_style</item>
        <item name="android:src">@drawable/ic_right_title</item>
         <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!-- 自定义窗体标题栏 -->	
	<style name="titlebarstyle" parent="android:Theme">
		<item name="android:windowTitleSize">48dp</item>
		<item name="android:windowTitleBackgroundStyle">@style/TitleBarbgStyle</item>  
	</style>
	<!-- 标题工具栏 -->
    <style name="TitleBarbgStyle">
        <item name="android:background">@drawable/g_bg_title_icon_pressed</item>
    </style>
</resources>
